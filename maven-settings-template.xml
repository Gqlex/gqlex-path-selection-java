<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 
          http://maven.apache.org/xsd/settings-1.0.0.xsd">

    <!-- 
    Maven Settings Template for Nexus/JFrog Artifactory
    Copy this file to ~/.m2/settings.xml and update with your credentials
    -->

    <servers>
        <!-- Nexus Repository Server -->
        <server>
            <id>nexus-snapshots</id>
            <username>YOUR_NEXUS_USERNAME</username>
            <password>YOUR_NEXUS_PASSWORD</password>
        </server>
        
        <server>
            <id>nexus-releases</id>
            <username>YOUR_NEXUS_USERNAME</username>
            <password>YOUR_NEXUS_PASSWORD</password>
        </server>

        <!-- JFrog Artifactory Server (alternative) -->
        <server>
            <id>jfrog-snapshots</id>
            <username>YOUR_JFROG_USERNAME</username>
            <password>YOUR_JFROG_API_KEY</password>
        </server>
        
        <server>
            <id>jfrog-releases</id>
            <username>YOUR_JFROG_USERNAME</username>
            <password>YOUR_JFROG_API_KEY</password>
        </server>
    </servers>

    <profiles>
        <!-- Profile for Nexus Repository -->
        <profile>
            <id>nexus</id>
            <repositories>
                <repository>
                    <id>nexus-snapshots</id>
                    <url>https://your-nexus-server.com/repository/maven-snapshots/</url>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </repository>
                <repository>
                    <id>nexus-releases</id>
                    <url>https://your-nexus-server.com/repository/maven-releases/</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
            </repositories>
        </profile>

        <!-- Profile for JFrog Artifactory -->
        <profile>
            <id>jfrog</id>
            <repositories>
                <repository>
                    <id>jfrog-snapshots</id>
                    <url>https://your-company.jfrog.io/artifactory/maven-snapshots/</url>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </repository>
                <repository>
                    <id>jfrog-releases</id>
                    <url>https://your-company.jfrog.io/artifactory/maven-releases/</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
            </repositories>
        </profile>
    </profiles>

    <activeProfiles>
        <!-- Uncomment the profile you want to use -->
        <!-- <activeProfile>nexus</activeProfile> -->
        <!-- <activeProfile>jfrog</activeProfile> -->
    </activeProfiles>

</settings>
